# tishi 配置文件
# 所有配置项均可通过环境变量覆盖 (TISHI_DATA_DIR, TISHI_GITHUB_TOKENS 等)

# 数据目录 (JSON 文件存储)
data_dir: ./data

github:
  tokens: []
  # tokens:
  #   - ghp_token1
  #   - ghp_token2

scraper:
  since: daily         # daily or weekly
  language: ""         # optional language filter (e.g. "python")
  timeout: 5m
  retry_max: 3

scorer:
  daily_stars: 0.35
  weekly_stars: 0.25
  forks_rate: 0.15
  issue_activity: 0.10
  top_n: 100

llm:
  provider: deepseek    # deepseek or qwen
  api_key: ""           # or set TISHI_LLM_API_KEY env var
  model: ""             # empty = provider default (deepseek-chat / qwen-plus)
  max_tokens: 2000
  temperature: 0.3
  retry_max: 3

logging:
  level: info           # debug / info / warn / error
  format: json          # json / console

site:
  domain: localhost
  title: "tishi — AI 开源项目深度分析"
  description: "追踪 GitHub AI 热门开源项目趋势，提供中文深度分析报告"
